<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.82.0">

    <link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/album/">

    <!-- Bootstrap core CSS -->
<link href="/docs/5.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <style>
      .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }
    </style>

    
  </head>
  <body>
    
<div class="d-flex justify-content-center">
  <h1>{{title}}</h1>
  <img src="../images/shopping-basket.png" height="65px;" width="65px">
</div>

<br>

<main>

<div class="card" style="width: 1250px; margin: auto;">
  <div class="card-header bg-dark text-white" style="text-align: center;">
    <h4>Featured Electronics</h4>
  </div>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">

        {{#each data}}
        <div class="col" style="margin: auto;">
          <div class="card shadow-sm">
            <img src="{{imgURL}}" width="285" height="285">
            <div class="card-body">
              <p class="card-text"><strong>{{name}}</strong></p>
              <p class="card-text"><i>{{brand}}</i></p>
              <p class="card-text">{{desc}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="electronics/add-cart?_id={{ this._id }}" class="btn btn-sm btn-primary" style="width: 75px;">
                    <img src="../images/add-cart.png" style="height: 24px; width: 26px;">
                  </a>
                </div>
                <small class="text-muted" style="font-size: medium;">${{price}}</small>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
        
      </div>
    </div>
  </div>
    <div class="card-footer bg-dark">
      <a href="electronics/" class="btn btn-sm btn-outline-primary" style="width: 160px; float:right; font-size: 16px;">
        All Electronics
        <img src="../images/arrow-right.png" style="height: 24px; width: 26px;">
      </a>
    </div>
</div>

<br>

<div class="card" style="width: 1250px; margin: auto;">
  <div class="card-header bg-dark text-white" style="text-align: center;">
    <h4>Featured Products</h4>
  </div>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-4 g-3">

        {{#each x}}
        <div class="col" style="margin: auto;">
          <div class="card shadow-sm">
            <img src="{{imgURL}}" width="285" height="285">
            <div class="card-body">
              <p class="card-text"><strong>{{name}}</strong></p>
              <p class="card-text"><i>{{brand}}</i></p>
              <p class="card-text">{{desc}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="products/add-cart?_id={{ this._id }}" class="btn btn-sm btn-primary" style="width: 75px;">
                    <img src="../images/add-cart.png" style="height: 24px; width: 26px;">
                  </a>
                </div>
                <small class="text-muted" style="font-size: medium;">${{price}}</small>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
        
      </div>
    </div>
  </div>
    <div class="card-footer bg-dark">
      <a href="products/" class="btn btn-sm btn-outline-primary" style="width: 150px; float:right; font-size: 16px;">
        All Products
        <img src="../images/arrow-right.png" style="height: 24px; width: 26px;">
      </a>
    </div>
</div>

    </main>
  </body>
</html>