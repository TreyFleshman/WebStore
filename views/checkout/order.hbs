<h1>Order Details</h1>
<div>

  <div class="card" style="width: 48rem; margin: auto;">
    <div class="card-body">
      <h5 class="card-title" style="text-align: center;"><strong>Order #{{orderDetails._id}}</strong></h5>
      <hr>
      <h6 style="text-align: center;">Order Summay</h6>

  <div>
    {{#each orderDetails.items}}
    <div class=" d-flex" style="width: 450px; margin: auto;">
      <div class="row">
        <div class="col">
          <img src="{{imgURL}}" style="height: 100px; width: 100px;">
        </div>
        <div class="col align-self-center">
          <p class="card-text"><strong>{{name}}</strong></p>
        </div>
        <div class="col align-self-center">
          <p class="card-text">{{desc}}</p>
        </div>
        <div class="col align-self-center">
          <p class="card-text">${{price}}</p>
        </div>
      </div>
    </div>
    <hr>
    {{/each}}    

    <br>    

    <h4 style="text-align: center;">Total ${{orderDetails.total}}</h4>

    <hr>
    
    <h5>Customer Information</h5>

    <p>{{orderDetails.firstName}} {{orderDetails.lastName}}</p>
    <p>{{orderDetails.address}} {{orderDetails.address2}}</p>
    <p>{{orderDetails.city}}, {{orderDetails.state}} {{orderDetails.zip}}</p>

    <div style="text-align: center;">
      <a href="/users/" class="btn btn-primary">View Orders</a>
    </div>
      
    </div>
  </div>

</div>
